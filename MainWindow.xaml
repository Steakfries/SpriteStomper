<Window x:Class="SpriteStomper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SpriteStomper"
        Title="SpriteStomper" Height="350" Width="525">
    <Grid>
        <Menu Height="23" HorizontalAlignment="Stretch" Name="menu1" VerticalAlignment="Top" >
            <MenuItem Header="_File">
                <MenuItem Header="_Open" Click="MenuItemOpen_Click"></MenuItem>
                <MenuItem Header="_Save" Command="Save" InputGestureText="Ctrl+s"></MenuItem>
            </MenuItem>
        </Menu>
        <local:MyCanvas Height="290" HorizontalAlignment="Left" Margin="0,21,0,0" x:Name="canvas1" VerticalAlignment="Top" Width="503" ></local:MyCanvas>
    </Grid>
</Window>
